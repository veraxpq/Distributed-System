            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button defaultButton="true" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#sendTransaction" text="Donate NOW!" GridPane.columnIndex="1" />
                <TextField fx:id="donateInput" promptText="How much you want to donate?" prefHeight="25.0" prefWidth="142.0">
                    <GridPane.margin>
                        <Insets right="10.0" />
                    </GridPane.margin></TextField>
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
